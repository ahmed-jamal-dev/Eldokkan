{
    "compilerOptions": {
        // File Layout
        "rootDir": "./src",
        "outDir": "./dist",

        // Environment Settings
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "types": ["node"],

        // Other Outputs
        "sourceMap": true,
        "declaration": false,
        "declarationMap": false,

        // Stricter Typechecking Options
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": false,

        // Recommended Options
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@handlers": ["./handlers"],
            "@handlers/*": ["./handlers/*"],
            "@types": ["./types"],
            "@datastore": ["./datastore"],
            "@datastore/*": ["./datastore/*"],
            "@api": ["./api"]
        }
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}
